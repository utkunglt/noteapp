<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noteapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.noteapp.NoteApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.noteapp.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.noteapp.EditNoteActivity"
            android:label="@string/title_activity_edit_note" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.noteapp.MainActivity" />
        </activity>
        <activity
            android:name="com.example.noteapp.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.noteapp.SingUpActivity"
            android:label="@string/title_activity_sing_up" >
            <meta-data
			       android:name="android.support.PARENT_ACTIVITY"
			       android:value="com.example.noteapp.LoginActivity" />
        </activity>
    </application>

</manifest>
